{% extends 'adminbase.html.twig' %}
{% block title %}Ürün Listesi{% endblock %}



{% block content %}

<div class="content">
    <div class="container-fluid">
        <div class="row"><h1>Mesajı Göster</h1></div>
        {{ include('admin/messages.html.twig') }}
        {{ include('admin/messages/_delete_form.html.twig') }}
        <div class="row"style="margin-top:3%">
            <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ message.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ message.email }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ message.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ message.comment }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ message.status }}</td>
            </tr>
            <tr>
                 <form action="{{ path('admin_messages_update',{'id':message.id}) }}" method="post">
                     <th>Yorum <br>
                         <div class="form-group">
                             <textarea name="comment" class="form-control" id="exampleFormControlTextarea1" rows="3">{{ message.comment }}</textarea>
                         </div>
                    </th>
                    <td>
                        <button type="submit" class="btn  btn-primary "><i class="material-icons"title="Send">send</i> Güncelle</button>
                    </td>
                </form>

            </tr>
        </tbody>

    </table>

            <a href="{{ path('admin_messages_index') }}" class="btn btn-warning"title="Back"><i class="material-icons">arrow_back_ios</i></a>



        </div>
    </div>
</div>

{% endblock %}
