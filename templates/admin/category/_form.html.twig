<form action="#" method="post"style="width: 100%">

    <div class="form-group">
        <label  class="control-label">Parent ID</label>

        <select name="category[parentid]" class="form-control">

            {% if category.parentid != 0 %}
                <option style="color: black">{{ category.parentid }}</option>
            {% else %}
                <option style="color: black"value="0">Ana Kategori</option>
            {% endif %}

            {% for cat in catlist %}
                <option style="color: black"value="{{ cat.id }}">{{ cat.title }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="" class="control-label">Title</label>
        <input name="category[title]" type="text" class="form-control"  value="{{ category.title }}"required>
    </div>
    <div class="form-group">
        <label for="" class="control-label">Keywords</label>
        <input name="category[keywords]" type="text" class="form-control"  value="{{ category.keywords }}"required>
    </div>
    <div class="form-group">
        <label for="" class="control-label">Description</label>
        <input name="category[description]" type="text" class="form-control"  value="{{ category.description }}"required>
    </div>

    <div class="form-group">
        <label >Example select</label>
            <select class="form-control selectpicker" data-style="btn btn-link"  name="category[status]" required>
                <option style="color: black"hidden>{{ category.status }}</option>
                <option style="color: black"selected>True</option>
                <option  style="color: black">False</option>

            </select>

    </div>
    <a href="{{ path('admin_category_index') }}" class="btn  btn-warning"><i class="material-icons"title="Back">arrow_back_ios</i></a><button type="submit" class="btn btn-primary "><i class="material-icons"title="Send">send</i></button>

</form>